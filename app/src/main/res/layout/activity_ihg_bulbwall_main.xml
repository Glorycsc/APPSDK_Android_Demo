<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#fff"
              android:orientation="vertical">

    <cn.com.broadlink.blappsdkdemo.view.tablayout.BLTabLayout
        android:id="@+id/tl_top"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:background="@android:color/white"
        app:tabBackground="@android:color/white"
        app:tab_gravity="center"
        app:tabIndicatorColor="@color/colorAccent"
        app:tabIndicatorHeight="4dp"
        app:tabIndicatorWidth="40dp"
        app:tabMinWidth="180dp"
        app:tab_mode="scrollable"
        app:tabSelectedTextColor="@color/colorAccent"
        app:tabTextColor="@color/text999"
        app:tabTextSize="14sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/title_bar_line"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_cotent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>